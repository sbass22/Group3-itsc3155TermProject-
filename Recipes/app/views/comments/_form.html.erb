<div class = "comment">
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <h4>
      <%= f.label :Author_Name %><br>
      <%= f.text_field :commenter %>
    </h4>
    <h4>
      <%= f.label :Comment %><br>
      <%= f.text_area :body %>
    </h4>
    <p>
      <%= f.submit 'Save Comment' %>
    </p>
  <% end %>
</div>